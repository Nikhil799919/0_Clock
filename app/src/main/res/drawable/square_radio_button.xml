<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when radio button is checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- Fill color when checked -->
            <size android:width="30dp" android:height="30dp"/> <!-- Size of the square -->
            <corners android:radius="2dp"/> <!-- Slight rounding on corners to make it look nicer -->
        </shape>
    </item>

    <!-- State when radio button is unchecked -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#000000"/> <!-- Border color when unchecked -->
            <size android:width="30dp" android:height="30dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>